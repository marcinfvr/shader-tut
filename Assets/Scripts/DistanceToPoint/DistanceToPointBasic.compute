#pragma kernel CSMain


float4 colourOn;
float4 colourOff;
float3 position;
float radius;

RWTexture2D<float4> Result;

[numthreads(1,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    float dist = distance(position, id);
    float t = saturate(1.0f - dist / radius);
    Result[id.xy] = lerp(colourOff, colourOn, t);
}
